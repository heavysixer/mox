doctype 5
html
	body
		each file in files
			h2= file.tag
			ul
				each comment in file.moxComments
					li
						a(href="##{comment.name.toLowerCase()}")= comment.name
		each file in files
			h2= file.tag
			each comment in file.moxComments
				h2= comment.name
				p!= comment.description.body
				h4 Arguments
				ol
					each param in comment.params
						li= param.name
							span  (
							each type, index in param.types
								if index > 0
									span  | 
									span= type
								else
									span= type
							span )
							span  - 
							span=  param.description
				#comment.return
					if comment.return
						h4 Returns
						br
						br
						span  (
						each type, index in comment.return.types
								if index > 0
									span  | 
									span= type
								else
									span= type
						span )
						span  - 
						span= comment.return.description